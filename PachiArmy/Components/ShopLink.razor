<Div Padding="Padding.Is1">
    <Text TextSize="TextSize.Small">Open!</Text>
    <Link To="Store">
    <Div class="clicky-card-link">
        <Card Padding="Padding.Is2" Margin="Margin.Is1" Width="Width.Max100">
            <Container>
                <Span>
                    <Image Source="@StoreIcon" Width="Width.Rem(3)" />
                    <Text Padding="Padding.Is2" VerticalAlignment="VerticalAlignment.Middle">@StoreName</Text>
                </Span>
            </Container>
        </Card>
    </Div>
    </Link>
</Div>

@code {
    [Parameter]
    public string StoreId { get; set; } = default!;

    [Parameter]
    public string StoreName { get; set; } = default!;

    [Parameter]
    public string StoreIcon { get; set; } = default!;

    [Parameter]
    public int PachisToUnlock { get; set; } = default!;
}