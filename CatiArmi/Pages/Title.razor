@page "/Title"
@using CatiArmi.Scripts;
@inject NavigationManager NavigationManager

<Animate Auto Animation="PageAnimationManager.NextPageAnimation">
     <Container TextAlignment="TextAlignment.Center" Height="Height.Rem(61)" onclick="@ClickedOnScreen">
         <Div Height="Height.Rem(17)"></Div>
         <Image Source="art/logo.png" Height="Height.Rem(8)" />
         <Div Padding="Padding.Is2" />
         <br />
         <Text TextSize="TextSize.ExtraLarge" Style="text-decoration: underline;">Credits</Text>
         <br />
         <Text TextSize="TextSize.Large">Sammy Mahmoudi - Team Lead, Programmer</Text>
         <br />
         <Text TextSize="TextSize.Large">Chris Hahn - Programming, Board SFX</Text>
         <br />
         <Text TextSize="TextSize.Large">Fran - Shopkeep Art, Writing</Text>
         <br />
         <Text TextSize="TextSize.Large">John Mai - Board Art</Text>
         <br />
         <Text TextSize="TextSize.Large">Michael Bravo - UI Art</Text>
         <br />
         <Text TextSize="TextSize.Large">Kris Olivares - Music, Menu SFX</Text>
         <br />
         <Text TextSize="TextSize.Large">Andy Vo - Victory Illustration</Text>
         <Div Height="Height.Rem(5)"></Div>
         <Text TextSize="TextSize.Large" Class="blink_me">Click Anywhere to Start</Text>
     </Container>
 </Animate>

 @code {
    protected override void OnInitialized()
    {
        Task.Run(async () =>
        {
            await Task.Delay(100);
            PageAnimationManager.NextPageAnimation = Animations.Fade;
        });
    }

    void ClickedOnScreen()
    {
        GameManager.InitializeTimers();

        PageAnimationManager.NextPageAnimation = Animations.ZoomIn;
        NavigationManager.NavigateTo("Horde");
    }
}